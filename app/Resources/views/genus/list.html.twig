{% extends 'base.html.twig' %}
{% block body %}
    <table class="table table-responsive table-bordered">
        <thead>
        <tr>
            <th>Genus</th>
            <th>Specias</th>
        </tr>
        </thead>
        <tbody>
        {% for genus in genuses %}
                <tr>
                    <td><a href="{{ path('genus_show', {
                            'genusName': genus.name
                        }) }}">{{ genus.name }}</a></td>
                    <td>{{ genus.speciesCount }}</td>
                    <td>{{ genus.updateAt }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}